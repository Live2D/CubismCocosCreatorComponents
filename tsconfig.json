{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "removeComments": true,
    "types": ["./@types", "./@types/cocos.html.analyzed"]
  },
  "include": ["./src"],
  "exclude": ["./static"],
  "references": [{ "path": "./static" }]
}
